nextflow_workflow {

    name "Test Subworkflow: FASTA_ANICLUSTER_BLAST"
    script "../main.nf"
    workflow "FASTA_ANICLUSTER_BLAST"

    test("fasta.gz") {
        when {
            workflow {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        file("$projectDir/assets/test-datasets/fastas/test1.contigs.fa.gz", checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }
    }
}
