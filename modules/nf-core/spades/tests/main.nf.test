nextflow_process {

    name "Test Process: SPADES"
    script "../main.nf"
    process "SPADES"

    test("fastq.gz single") {
        when {
            params {
                spades_single_args = "--meta --only-assembler"
            }
            process {
                """
                input[0] = [
                    [ id: 'test1' ],
                    [
                        file("${projectDir}/assets/test-datasets/fastqs/test1_1.fastq.gz", checkIfExists: true),
                        file("${projectDir}/assets/test-datasets/fastqs/test1_2.fastq.gz", checkIfExists: true),
                    ],
                    [],
                    []
                ]
                input[1] = []
                input[2] = []
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() },
            )
        }
    }


    test("fastq.gz - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id: 'test1' ],
                    [
                        file("${projectDir}/assets/test-datasets/fastqs/test1_1.fastq.gz", checkIfExists: true),
                        file("${projectDir}/assets/test-datasets/fastqs/test1_2.fastq.gz", checkIfExists: true),
                    ],
                    [],
                    []
                ]
                input[1] = []
                input[2] = []
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() },
            )
        }
    }
}
