nextflow_process {

    name "Test Process GENOMAD_ENDTOEND"
    script "../main.nf"
    process "GENOMAD_ENDTOEND"

    setup {
        run("GENOMAD_DOWNLOAD") {
            script "../../download/main.nf"
        }
    }

    test("fasta.gz") {
        when {
            params {
                genomad_args    = "--splits 5 --sensitivity 0.1 --disable-find-proviruses"
            }
            process {
                """
                input[0] = [
                    [ id:'test', assembler:'megahit_single' ], // meta map
                    file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                    ]
                input[1] = GENOMAD_DOWNLOAD.out.genomad_db
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
            )
        }
    }


    test("fasta.gz - stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'test', assembler:'megahit_single' ], // meta map
                    file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                    ]
                input[1] = GENOMAD_DOWNLOAD.out.genomad_db
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match() }
            )
        }
    }
}
