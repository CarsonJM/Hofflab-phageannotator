process {
    withName: CHECKV_ENDTOEND {
        ext.args = [
            params.checkv_args ? params.checkv_args : ""
        ].join(" ").trim()
        ext.prefix = { meta.extended ? "${meta.id}_extended" : "${meta.id}" }
        publishDir = [
            [
                path: { "${params.outdir}/VirusQuality/checkv/endtoend" },
                mode: params.publish_dir_mode,
                pattern: '*_quality_summary.tsv'
            ],
            [
                path: { "${params.outdir}/VirusQuality/checkv/endtoend" },
                mode: params.publish_dir_mode,
                pattern: '*_contamination.tsv',
                enabled: false
            ],
            [
                path: { "${params.outdir}/VirusQuality/checkv/endtoend" },
                mode: params.publish_dir_mode,
                pattern: '*_completeness.tsv',
                enabled: false
            ]
        ]
    }
}