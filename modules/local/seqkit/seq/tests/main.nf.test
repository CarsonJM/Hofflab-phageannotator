nextflow_process {

    name "Test Process: SEQKIT_SEQ"
    script "../main.nf"
    process "SEQKIT_SEQ"


    test("fasta.gz") {

        when {
            params {
                assembly_min_length = 1000
            }
            process {
                """
                input[0] = [
                    [id: 'test'],
                    file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("fasta.gz - stub") {

        options "-stub"

        when {
            params {
                assembly_min_length = 1000
            }
            process {
                """
                input[0] = [
                    [id: 'test'],
                    file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
