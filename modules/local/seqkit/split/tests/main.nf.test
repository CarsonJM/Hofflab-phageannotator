nextflow_process {

    name "Test Process: SEQKIT_SPLIT"
    script "../main.nf"
    process "SEQKIT_SPLIT"


    test("fasta.gz") {

        when {
            params {
                seqkit_split_args   = "-p 3"
            }
            process {
                """
                input[0] = Channel.of(
                    [
                        [id: 'test'],
                        file("$projectDir/assets/test-datasets/fastas/MEGAHIT-test1.contigs.fa.gz", checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("fasta.gz - stub") {

        options "-stub"

        when {
            params {
                seqkit_split_args   = "-p 3"
            }
            process {
                """
                input[0] = Channel.of(
                    [
                        [id: 'test'],
                        file("$projectDir/assets/test-datasets/fastas/MEGAHIT-test1.contigs.fa.gz", checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
