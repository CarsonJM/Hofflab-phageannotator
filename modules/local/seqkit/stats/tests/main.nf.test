nextflow_process {

    name "Test Process: SEQKIT_STATS"
    script "../main.nf"
    process "SEQKIT_STATS"
    config "./nextflow.config"


    test("fasta.gz") {

        when {
            params {
                assembly_min_length = 5
            }
            process {
                """
                input[0] = [
                    [id: 'test'],
                    file("${projectDir}/assets/test-datasets/fastas/MEGAHIT-BUFF_01_B.contigs.fa.gz", checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("fasta.gz - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [id: 'test'],
                    file("${projectDir}/assets/test-datasets/fastas/MEGAHIT-BUFF_01_B.contigs.fa.gz", checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
