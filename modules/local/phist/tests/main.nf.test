nextflow_process {

    name "Test Process PHIST"
    script "../main.nf"
    process "PHIST"
    config "./nextflow.config"


    test("virus_fasta_dir + bacteria_fasta_dir") {
        when {
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        "$projectDir/assets/test-datasets/phist/phages"
                    ]
                )
                input[1] = Channel.of(
                    [
                        "$projectDir/assets/test-datasets/phist/bacteria"
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("fasta.gz - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        "$projectDir/assets/test-datasets/phist/phages"
                    ]
                )
                input[1] = Channel.of(
                    [
                        "$projectDir/assets/test-datasets/phist/bacteria"
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
