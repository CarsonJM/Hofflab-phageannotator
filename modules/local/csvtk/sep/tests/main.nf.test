// nf-core modules test csvtk/concat
nextflow_process {

    name "Test Process CSVTK_SEP"
    script "../main.nf"
    process "CSVTK_SEP"
    config "./nextflow.config"

    test("tsv - sep - tsv") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    [ file("${projectDir}/assets/test-datasets/csvtk/sep_test.tsv", checkIfExists: true) ]
                ]
                input[1] = "tsv"
                input[2] = "tsv"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("tsv - concat - tsv - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    [ file("${projectDir}/assets/test-datasets/csvtk/sep_test.tsv", checkIfExists: true) ]
                ]
                input[1] = "tsv"
                input[2] = "tsv"
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
