nextflow_process {

    name "Test process: SRA_IDS_TO_RUNINFO"
    script "../main.nf"
    process "SRA_IDS_TO_RUNINFO"

    test("SRR13191702") {

        when {
            process {
                """
                input[0] = 'SRR13191702'
                input[1] = ''
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("SRR13191702 - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = 'SRR13191702'
                input[1] = ''
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
