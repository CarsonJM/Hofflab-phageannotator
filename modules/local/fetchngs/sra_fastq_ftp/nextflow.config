process {
    withName: 'SRA_FASTQ_FTP' {
        ext.args = '-t 5 -nv -c -T 60'
        ext.prefix = { "${meta.id}_run${meta.run}"}
        publishDir = [
            [
                path: { "${params.outdir}/SRADownload/ftp" },
                mode: params.publish_dir_mode,
                pattern: "*.fastq.gz"
            ],
            [
                path: { "${params.outdir}/SRADownload/ftp" },
                mode: params.publish_dir_mode,
                pattern: "*.md5"
            ]
        ]
    }
}
