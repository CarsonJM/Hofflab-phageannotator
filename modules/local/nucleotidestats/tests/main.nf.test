nextflow_process {

    name "Test Process NUCLEOTIDESTATS"
    script "../main.nf"
    process "NUCLEOTIDESTATS"

    test("fasta.gz + faa.gz") {
        when {
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        "$projectDir/assets/test-datasets/fastas/MEGAHIT-test1.contigs.fa.gz"
                    ]
                )
                input[1] = Channel.of(
                    [
                        [ id:'test' ],
                        "$projectDir/assets/test-datasets/fastas/test1_proteins.faa.gz"
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("empty fasta + empty faa") {
        when {
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        file("${projectDir}/assets/test-datasets/fastas/empty_file.fasta.gz", checkIfExists: true)
                    ]
                )
                input[1] = Channel.of(
                    [
                        [ id:'test' ],
                        file("${projectDir}/assets/test-datasets/fastas/empty_file.faa.gz", checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("fasta.gz + faa.gz - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        "$projectDir/assets/test-datasets/fastas/MEGAHIT-test1.contigs.fa.gz"
                    ]
                )
                input[1] = Channel.of(
                    [
                        [ id:'test' ],
                        "$projectDir/assets/test-datasets/fastas/test1_proteins.faa.gz"
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
