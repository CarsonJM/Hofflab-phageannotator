/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run HoffLab/phageannotator -profile test_read_preprocessing,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Read preprocessing Test profile'
    config_profile_description = 'Minimal test dataset to check ability to preprocess FastQ files'

    // input options
    input = "${projectDir}/assets/test-datasets/samplesheets/reads_only.csv"

    // preprocessing options
    perform_run_merging         = true
    run_fastp                   = true
    fastp_args                  = null
    run_bowtie2_host_removal    = true
    bowtie2_igenomes_host       = "GRCh38"
    bowtie2_custom_host_fasta   = null
    bowtie2_args                = null

    // virus enrichment options
    run_viromeqc                = true
    viromeqc_db                 = null
    save_viromeqc_db            = false
    viromeqc_args               = null

    // Cleanup options
    remove_intermediate_files   = true
}
