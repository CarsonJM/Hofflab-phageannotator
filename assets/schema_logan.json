{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/mag/master/assets/schema_input.json",
    "title": "nf-core/mag pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "logan": {
                "type": "string",
                "exists": true,
                "pattern": "^(((SR|ER|DR)[APRSX])|(SAM(N|EA|D))|(PRJ(NA|EB|DB))|(GS[EM]))(\\d+)$",
                "errorMessage": "LOGAN accessions must contain only SRA / ENA / GEO / DDBJ ids."
            }
        },
        "required": ["logan"]
    }
}
